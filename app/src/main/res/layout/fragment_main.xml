<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proyecto.todosfirebase.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <EditText
        android:layout_width="275dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/notaEnviar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_Enviar"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.14" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/btn_Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableBottom="@android:drawable/ic_menu_send"
        android:layout_marginBottom="8dp" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="388dp"
        android:id="@+id/listView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/notaEnviar"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
